generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id                  String                  @id @unique(map: "employees_id_idx") @default(uuid())
  employeeCode        String                  @unique
  email               String                  @unique
  fullname            String
  position            String
  businessUnit        String
  department          String
  branch              String
  role                UserRole                @default(Staff)
  quota               Int                     @default(0)
  pointsBalance       Int                     @default(0)
  password            String?                 // Hashed password
  dateOfBirth         DateTime?               // For forgot password verification
  avatar              String?
  createdAt           DateTime                @default(now())
  updatedAt           DateTime                @updatedAt
  givenTransactions   RewardTransaction[]     @relation("GivenTransactions")
  receivedAllocations TransactionAllocation[] @relation("ReceivedAllocations")
  redeemRequests      RedeemRequest[]

  @@map("employees")
}

model RewardCategory {
  id          String                  @id @default(uuid())
  name        String                  @unique
  description String?
  color       String                  @default("#6B7280")
  icon        String?
  isActive    Boolean                 @default(true)
  createdBy   String
  updatedBy   String
  createdAt   DateTime                @default(now())
  updatedAt   DateTime                @updatedAt
  allocations TransactionAllocation[]

  @@map("reward_categories")
}

model RewardTransaction {
  id          String                  @id @default(uuid())
  type        TransactionType
  totalPoints Int
  status      TransactionStatus       @default(COMPLETED)
  message     String?
  groupType   String?
  groupValue  String?
  source      String
  giverId     String
  createdBy   String
  updatedBy   String
  createdAt   DateTime                @default(now())
  updatedAt   DateTime                @updatedAt
  giver       Employee                @relation("GivenTransactions", fields: [giverId], references: [id])
  allocations TransactionAllocation[]

  @@map("reward_transactions")
}

model TransactionAllocation {
  id            String            @id @default(uuid())
  transactionId String
  recipientId   String
  categoryId    String
  points        Int
  createdBy     String
  updatedBy     String
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  category      RewardCategory    @relation(fields: [categoryId], references: [id])
  recipient     Employee          @relation("ReceivedAllocations", fields: [recipientId], references: [id])
  transaction   RewardTransaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)

  @@map("transaction_allocations")
}

// ============================================
// REWARDS CATALOG & REDEMPTION MODELS
// ============================================

model Reward {
  id             String          @id @default(uuid())
  name           String
  description    String?
  imageUrl       String?
  category       String          // Electronics, Vouchers, Merchandise, etc.
  pointsCost     Int
  stock          Int             @default(0)
  isPhysical     Boolean         @default(true)
  status         RewardStatus    @default(ACTIVE)
  createdBy      String
  updatedBy      String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  redeemRequests RedeemRequest[]

  @@index([status])
  @@index([isPhysical])
  @@map("rewards")
}

model RedeemRequest {
  id              String         @id @default(uuid())
  employeeId      String
  rewardId        String
  pointsUsed      Int
  status          RedeemStatus   @default(PENDING)
  shippingType    ShippingType   @default(PICKUP)
  shippingAddress String?
  contactPhone    String?
  shippingStatus  ShippingStatus @default(PENDING)
  trackingNumber  String?
  carrier         String?
  shippedAt       DateTime?
  deliveredAt     DateTime?
  note            String?
  approvedBy      String?
  approvedAt      DateTime?
  rejectedReason  String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  employee        Employee       @relation(fields: [employeeId], references: [id])
  reward          Reward         @relation(fields: [rewardId], references: [id])

  @@index([status])
  @@index([employeeId])
  @@index([shippingStatus])
  @@map("redeem_requests")
}

model AuditLog {
  id         String   @id @default(uuid())
  action     String   // CREATE_REWARD, APPROVE_REDEEM, UPDATE_SHIPPING, etc.
  entityType String   // Reward, RedeemRequest
  entityId   String
  actorId    String
  details    Json?
  ipAddress  String?
  createdAt  DateTime @default(now())

  @@index([entityType, entityId])
  @@index([actorId])
  @@index([createdAt])
  @@map("audit_logs")
}

// ============================================
// ENUMS
// ============================================

enum UserRole {
  Admin
  Executive
  MiddleManagement @map("Middle Management")
  Staff
}

enum TransactionType {
  SINGLE
  GROUP
  ADJUSTMENT
}

enum TransactionStatus {
  PENDING
  COMPLETED
  CANCELLED
  FAILED
}

enum RewardStatus {
  ACTIVE
  INACTIVE
  OUT_OF_STOCK
}

enum RedeemStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

enum ShippingType {
  PICKUP
  DELIVERY
  DIGITAL
}

enum ShippingStatus {
  NOT_REQUIRED
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  RETURNED
}

